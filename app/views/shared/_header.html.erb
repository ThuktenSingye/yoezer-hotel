<div class="relative w-full h-[80vh] h-screen" data-aos="zoom-in-out" data-aos-duration="2000">
  <div class="absolute inset-0 w-full h-full" data-aos="zoom-out-down" data-aos-duration="3000">
    <%= image_tag('banner.jpg', class: "object-cover w-full h-full") %>
  </div>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <div class="absolute-layout text-white gap-4 md:gap-10 px-4 text-center">
    <h1 class="user-heading-title">YOEZER HOTEL</h1>
    <h1 class="user-heading-title">YOUR HOME</h1>
    <p class="text-sm md:text-base lg:text-lg">Every moment feels like the first time in paradise view</p>
    <div class="mt-4 md:mt-6">
      <%= link_to "Book Now", root_path, class: "bg-white rounded-sm hover:shadow-lg rounded-none text-primary-regular hover:bg-primary-regular hover:text-white
      transition duration-300 px-6 py-2 md:px-8 md:py-3 text-lg md:text-xl" %>
    </div>
  </div>

  <header class="hidden md:flex absolute-layout text-white top-0 w-full border-box h-[100px]">
    <div class="w-full flex flex-row items-center px-4">
      <div class="self-start">
        <%= image_tag("logo.jpg", class: "avatar-wrapper rounded-full") %>
      </div>
      <div class="flex-grow flex justify-center gap-10 font-title">
        <%= link_to "HOME", root_path, class: "user-nav-link" %>
        <%= link_to "EXPLORE", root_path, class: "user-nav-link" %>
        <%= link_to "ROOMS", root_path, class: "user-nav-link" %>
        <%= link_to "ABOUT US", root_path, class: "user-nav-link" %>
        <%= link_to "CONTACT US", root_path, class: "user-nav-link" %>
      </div>
    </div>
  </header>

  <!-- Navbar for small screens -->
  <div data-controller="navbar" class="flex overflow-hidden">
    <div class="absolute block md:hidden top-7 left-4">
      <%= image_tag("logo.jpg", class: "avatar-wrapper rounded-full") %>
    </div>
    <button
      class="absolute top-7 right-4 z-1000 bg-primary-regular text-white p-2 rounded md:hidden"
      data-action="click->navbar#toggleNavBarMenu"
      aria-label="Toggle Navbar"
      aria-expanded="false">
      <%= icon("fa-solid", "bars", class: "w-6") %>
    </button>
    <div
      class="fixed z-50 inset-y-0 h-screen left-0 w-full p-4 bg-primary-regular transform -translate-x-full transition-transform duration-300 md:translate-x-0 md:hidden"
      data-navbar-target="navbarMenu">
      <div class="flex flex-col gap-4 py-4 px-10">
        <div class="self-end md:hidden">
          <button data-action="click->navbar#toggleNavBarMenu">
            <%= icon("fa-solid", "xmark", class: "fa-2x text-white w-6") %>
          </button>
        </div>
        <ul class="text-white font-title">
          <li class="sidebar-menu-row">
            <%= link_to "HOME", root_path, class: "user-nav-link" %>
          </li>
          <li class="sidebar-menu-row">
            <%= link_to "EXPLORE", root_path, class: "user-nav-link" %>
          </li>
          <li class="sidebar-menu-row">
            <%= link_to "ABOUT", root_path, class: "user-nav-link" %>
          </li>
          <li class="sidebar-menu-row">
            <%= link_to "CONTACT", root_path, class: "user-nav-link" %>
          </li>
        </ul>
        <hr>

        <div class="flex flex-col">
          <h3 class="font-title text-white p-2">YOEZER HOTEL</h3>
          <div class="flex gap-10 my-2 text-white p-2">
            <%= icon('fa-brands', 'facebook-f', class: "user-nav-link") %>
            <%= icon('fa-brands', 'instagram', class: "user-nav-link") %>
            <%= icon('fa-brands', 'twitter', class: "user-nav-link") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>