<div class="mx-4">
  <div class="container mx-auto">
    <div class="w-full flex justify-between items-center my-4">
      <h1 class="title mx-4"> Hotel Offer</h1>
      <div class="self-end">
        <%= link_to "Add", new_admins_hotel_offer_path(@hotel), class: "btn" %>
      </div>
    </div>
    <div class="flex flex-wrap items-center justify-center gap-5 z-10 ">
      <% @offers.each do |offer| %>
        <%= render "admins/offers/offer_card", offer: offer %>
      <% end %>
    </div>
  </div>
</div>
