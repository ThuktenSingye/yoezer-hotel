<div class="m-4 z-0">
  <%= form_with(model: [:admins, @hotel, offer], local: true, class: "flex flex-col justify-center") do |f| %>
    <% if offer.errors.any? %>
      <div id="error_explanation" class="flex flex-col items-center">
        <h2 class="text-text-color/50"><%= pluralize(offer.errors.count, "error") %>!:</h2>
        <ul class="text-error">
          <% offer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-1 w-full">
      <div class="my-2">
        <div class="flex flex-col" data-controller="avatar">
          <div class="relative flex flex-row justify-center shrink-0 my-2 ml-2 gap-2">
            <%= image_tag(offer&.image&.attached? ? offer.image : "https://placehold.co/200x200", class:"image-md", data: {avatar_target: "imagePreview"} ) %>
            <div class="self-start icon p-4 hover:cursor-pointer" data-action="click->avatar#selectImage">
              <%= icon('fa-solid', 'pen-to-square', class: "text-primary-regular") %>
            </div>
            <%= f.file_field :image, accept: "image/*", data: {avatar_target: "avatarUpload", action: "change->avatar#showPreview"}, class: "hidden" %>
          </div>
        </div>
      </div>

      <div class="input-container">
        <%= f.label :title, class: "input-label" %>
        <%= f.text_field :title, class: "input-field" %>
      </div>
      <div class="input-container">
        <%= f.label :description, class: "input-label" %>
        <%= f.textarea :description, rows: 3, class: "input-field" %>
      </div>
      <div class="input-container">
        <%= f.label :discount, class: "input-label" %>
        <%= f.number_field :discount, class: "input-field", min: 0, max: 100 %>
      </div>
      <div class="input-container">
        <%= f.label :start_time, class: "input-label" %>
        <%= f.text_field :start_time, data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d"}, class: "input-field" %>
      </div>
      <div class="input-container">
        <%= f.label :end_time, class: "input-label" %>
        <%= f.text_field :end_time, data: { controller: "flatpickr", flatpickr_date_format: "Y-m-d"}, class: "input-field" %>
      </div>

    </div>
    <hr class="bg-primary-regular h-0.5">
    <div class="flex items-center mt-4 gap-5">
      <%= f.submit "Save", class: "btn", data: { turbo_frame: "_top"} %>
      <% if offer.persisted? %>
        <%= link_to "Cancel", admins_hotel_offer_path(@hotel, offer), class: "btn", data: { turbo_frame: "_top"} %>
      <% else %>
        <%= link_to "Cancel", admins_hotel_offers_path(@hotel), class: "btn", data: { turbo_frame: "_top"} %>
      <% end %>
    </div>
  <% end %>
</div>
