<div class="border-b text-sm hover:bg-background group flex justify-between items-center text-text-color/50 p-2">
  <div class="flex flex-1  justify-center items-center gap-2">
    <%= image_tag((employee.profile.avatar&.attached? ? employee.profile.avatar : "https://placehold.co/50x50"),
                  class: "icon icon-button avatar-wrapper p-1 shadow-md group-hover:bg-white") %>
    <div class="w-36">
      <%= link_to admins_hotel_employee_path(@hotel, employee), data: { turbo_frame: "_top" } do %>
        <p class="hover:text-primary-dark hover:underline"><%= employee.profile.first_name %> <%= employee.profile.last_name %></p>
      <% end %>
    </div>
  </div>
  <div class="w-[20%] text-center hidden md:block">
    <p><%= employee.profile.contact_no %></p>
  </div>

  <div class="w-[20%] text-center hidden lg:block">
    <p><%= employee.profile.designation.to_s.humanize %></p>
  </div>

  <div class="w-[20%] text-center hidden lg:block">
    <p class="break-words"><%= employee.email %></p>
  </div>

  <div class="w-[10%] text-center hidden md:block">
    <div class="flex justify-center items-center gap-4">
      <%= link_to admins_hotel_employee_path(@hotel, employee), class: "hidden md:block", data: {"turbo-method": :delete, "turbo-confirm": "Are you sure to delete?", turbo_frame: "_top"} do %>
        <button class="icon icon-button p-2 group-hover:bg-white hidden md:block">
          <%= icon('fa-solid', 'trash', class: "text-error") %>
        </button>
      <% end %>
    </div>
  </div>
</div>
