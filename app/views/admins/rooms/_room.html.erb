<turbo-frame id="<%= dom_id room %>">
  <section class="card-container">
    <div class="card p-4 flex flex-col gap-4">
      <div>
        <p class="title mb-2">Primary Image:</p>
        <div class="image-cropper md:card-wrapper-sm mx-auto">
          <%= image_tag(room.image || "https://placehold.co/100x100", class: "image") %>
        </div>
      </div>
      <div>
        <p class="title mb-2">Images:</p>
        <div class="flex flex-wrap justify-evenly mb-2 gap-4">
          <% room.images.each do |image| %>
            <div class="image-cropper">
              <%= image_tag(image || "https://placehold.co/100x100", class: "image") %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="relative card p-4 mb-4 hover:shadow-lg ">
      <div class="flex flex-col gap-4 ">
        <div class="flex flex-col gap-2">
          <div class="flex justify-between items-center">
            <h2 class="title"><%= room.room_category.name %></h2>
            <p class="absolute top-0 right-0 p-2 text-white  <%= status_class(room.status) %>">
              <%= room.status.to_s.humanize %>
            </p>
          </div>
          <div>
            <% rating = room.room_ratings.average(:rating) || 0 %>
            <% stars = Room.calculate_rating(rating) %>
            <%= render 'shared/rating', rating: rating, stars: stars %>
          </div>
          <p class="text-sm text-text-color/50"><%= room.description %></p>
        </div>
        <div class="flex flex-col items-start">
          <p class="flex mt-1">
            <span class="input-label-sm text-text-color/50 ">Room No:</span>
            <span class="input-value text-primary-regular"><%= room.room_number %></span>
          </p>
          <p class="flex mt-1">
            <span class="input-label-sm text-text-color/50">Floor No:</span>
            <span class="input-value text-primary-regular"><%= room.floor_number %></span>
          </p>
          <p class="flex mt-1">
            <span class="input-label-sm text-text-color/50">Max no of Adults:</span>
            <span class="input-value text-primary-regular"><%= room.max_no_adult %></span>
          </p>
          <p class="flex mt-1">
            <span class="input-label-sm  text-text-color/50">Max no of Children:</span>
            <span class="input-value text-primary-regular"><%= room.max_no_children %></span>
          </p>
        </div>
        <div class="flex justify-between items-center ">
          <div class="mt-2 self-end mb-2">
            <%= link_to "Reservation", admins_hotel_rooms_path(@hotel), data: { turbo_frame: "_top"} ,class: "btn" %>
          </div>
          <p>Nu. <span class="font-bold text-2xl text-primary-regular"><%= room.base_price.to_i.to_s %></span> Night </p>
        </div>
        <hr class="bg-primary-regular h-0.5">
        <div class="flex justify-between items-center mt-2 gap-2">
          <div>
            <%= link_to "Back", admins_hotel_rooms_path(@hotel), data: { turbo_frame: "_top"} ,class: "btn" %>
          </div>
          <div>
            <%= link_to "Edit", edit_admins_hotel_room_path(@hotel, room), class: "btn" %>
            <%= link_to 'Delete', admins_hotel_room_path(@hotel, room), data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete?", turbo_frame: "_top" }, class: "btn" %>
          </div>
        </div>
      </div>
    </div>
  </section>
</turbo-frame>
