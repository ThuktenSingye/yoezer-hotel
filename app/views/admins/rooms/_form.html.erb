<div class="m-4">
  <%= form_with(model: [:admins, room], local: true, class: "flex flex-col justify-center") do |f| %>
    <% if room.errors.any? %>
      <div id="error_explanation" class="flex flex-col items-center">
        <h2 class="text-text-color/50"><%= pluralize(room.errors.count, "error") %>!:</h2>
        <ul class="text-error">
          <% room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="w-full flex flex-col my-3">
      <div class="my-2">
        <div class="" data-controller="avatar">
          <p class="input-label">Primary Image:</p>
          <div class="relative flex flex-row justify-center shrink-0 my-2 ml-2 gap-2">
            <% if room.persisted? %>
              <%= image_tag(room&.image&.attached? ? room.image : "https://placehold.co/200x200", class:"image-md", data: { avatar_target: "imagePreview" } ) %>
            <% else %>
              <%= image_tag("https://placehold.co/200x200", class:"image-md", data: { avatar_target: "imagePreview" } ) %>
          <% end %>
            <div class="self-start icon p-4 hover:cursor-pointer" data-action="click->avatar#selectImage">
              <%= icon('fa-solid', 'pen-to-square', class: "text-primary-regular") %>
            </div>
            <%= f.file_field :image, accept: "image/*", data: {avatar_target: "avatarUpload", action: "change->avatar#showPreview"}, class: "hidden" %>
          </div>
        </div>
      </div>
      <div>
        <p class="input-label">Images:</p>
        <div class="flex flex-col items-center gap-4" data-controller="image">
          <div class="flex items-center gap-4 p-2 border-2 border-dashed rounded border-primary-regular hover:shadow-lg hover:cursor-pointer mt-2" data-action="click->image#selectImage">
            <%= icon('fa-solid', 'image', class: "fa-2x p-2 avatar-wrapper items-center text-primary-regular") %>
            <span class="text-text-color/50 text-sm">Click to attach Image</span>
          </div>
          <div class="flex flex-1 flex-wrap justify-evenly items-center gap-5" data-image-target="imagesContainer">
            <% if room.persisted? %>
              <% room.images.each do |image| %>
                <div data-image-target="existingImageContainer">
                  <div class="relative my-2">
                    <div class="relative image-wrapper">
                      <%= image_tag(image || "https://placehold.co/200x200", class: "image", data: { image_target: "imagePreview" }) %>
                    </div>
                    <div class="flex items-center justify-center absolute -top-4 -right-4 avatar-wrapper icon hover:cursor-pointer z-10" data-action="click->image#removeExistingImage">
                      <%= icon('fa-solid', 'xmark', class: "text-primary-regular") %>
                    </div>
                  </div>
                  <%= f.hidden_field :images, multiple:true, value: image.signed_id, id: "record" %>
                </div>
              <% end %>
            <% end %>
            <%= f.file_field :images, :multiple => true, accept: "image/*", data: { image_target: "imageInput", action: "change->image#addImage" }, class:"hidden" %>
          </div>
        </div>
      </div>

      <div class="input-container">
        <%= f.label :room_number, class: "input-label" %>
        <%= f.text_field :room_number, class: "input-field" %>
      </div>

      <div class="input-container">
        <%= f.label :floor_number, class: "input-label" %>
        <%= f.number_field :floor_number, rows: 3, class: "input-field", min: 0, max:10 %>
      </div>

      <div class="input-container">
        <%= f.label :description, class: "input-label" %>
        <%= f.text_area :description, class: "input-field" %>
      </div>

      <div class="input-container">
        <%= f.label :base_price, class: "input-label" %>
        <%= f.number_field :base_price, class: "input-field" %>
      </div>

      <div class="input-container">
        <%= f.label :max_no_adult, class: "input-label" %>
        <%= f.number_field :max_no_adult, class: "input-field" %>
      </div>

      <div class="input-container">
        <%= f.label :max_no_children, class: "input-label" %>
        <%= f.number_field :max_no_children, class: "input-field" %>
      </div>

      <div class="input-container">
        <%= f.label :status, class: "input-label" %>
        <%= f.select :status, Room.statuses.keys.map { |d| [d.humanize, d] }, {}, { disabled: @room.status == 'booked' || @room.status == 'reserved' } %>
      </div>

      <div class="input-container">
        <%= f.label :room_category_id, class: "input-label" %>
        <%= f.collection_select :room_category_id, RoomCategory.all, :id, :name, { prompt: "Select a Room Category" } %>
      </div>

      <hr class="bg-primary-regular h-0.5">
      <div class="flex items-center mt-4 gap-5">
        <%= f.submit "Save", class: "btn", data: { turbo_frame: "_top"} %>
        <% if room.persisted? %>
          <%= link_to "Cancel", admins_room_path(room) , class: "btn", data: { turbo_frame: "_top"} %>
        <% else %>
          <%= link_to "Cancel",admins_rooms_path, class: "btn", data: { turbo_frame: "_top"} %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
