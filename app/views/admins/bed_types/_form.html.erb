<div class="m-4">
    <%= form_with(model: [:admins, @hotel, bed_type], local: true, class: "flex flex-col justify-center") do |f| %>
    <% if bed_type.errors.any? %>
    <div id="error_explanation" class="flex flex-col items-center">
        <h2 class="text-text-color/50"><%= pluralize(bed_type.errors.count, "error") %>:</h2>
        <ul class="text-error">
            <% bed_type.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="my-1 w-full">
        <div class="input-container">
            <%= f.label :name, class: "input-label" %>
            <%= f.text_field :name, class: "input-field" %>
        </div>
    </div>
    <hr class="bg-primary-regular h-0.5">
    <div class="flex items-center mt-4 gap-5">
        <%= f.submit "Save", class: "btn", data: { turbo_frame: "_top"} %>
        <%= link_to "Cancel", admins_hotel_room_categories_path(@hotel), class: "btn", data: { turbo_frame: "_top"} %>
    </div>
    <% end %>
</div>
