<div class="relative w-full h-[80vh] lg:h-screen" data-aos="zoom-in-out" data-aos-duration="2000">
  <div class="absolute inset-0 w-full h-full" data-aos="zoom-out-down" data-aos-duration="3000">
    <%= image_tag('explore.jpg', class: "object-cover w-full h-full") %>
  </div>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <div class="absolute-layout text-white gap-4 md:gap-10 px-4 text-center">
    <h1 class="user-heading-title">KEEP IN TOUCH</h1>
  </div>
</div>

<div class="w-full my-8">
  <div class="w-full md:w-5/6 mx-auto flex flex-col gap-10 p-6">
    <div class="w-full flex flex-col">
      <h1 class="user-title">Find Your Way</h1>
      <div class="w-full my-4"
           data-aos="fade-up"
           data-aos-duration="1000"
           data-aos-offset="0">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d28487.41779412141!2d91.5010615!3d26.8104458!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x375bebd44666d2ab%3A0xb069829c4ad7ddd!2sYOEZER%20HOTEL(swimming%20pool)!5e0!3m2!1sen!2sbt!4v1739273423543!5m2!1sen!2sbt" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
    <div class="w-full flex flex-col"
         data-aos="fade-up"
         data-aos-duration="1000"
         data-aos-offset="0">
      <h1 class="text-primary-regular text-2xl font-title text-center mb-2">Please Leave Your Feedback</h1>
      <div class="relative user-card-container h-auto" >
        <%= render "feedbacks/form", feedback: @feedback %>
      </div>
    </div>

    <div class="w-full"
         data-aos="fade-up"
         data-aos-duration="1000">
      <div class="flex flex-col gap-3 justify-center items-center">
        <p class="text-primary-regular text-2xl font-title text-center">Enjoyed your stay? Leave a rating!</p>
        <div class="flex justify-center gap-4 items-center" data-controller="room-rating">
          <% Room::MAX_RATING.times do |n| %>
            <%= button_to hotels_rating_index_path,
                          method: :post,
                          params: { hotel_rating: { rating: n + 1 } },
                          class: "mx-1 star-button ",
                          data: {
                            room_rating_target: "starButton",
                            action: "mouseover->room-rating#mouseOver mouseout->room-rating#mouseOut"
                          } do %>
              <%= icon("fa-solid", "star", class: "star text-rating md:text-text-color/20 star hover:scale-105 transition duration-300", data: {room_rating_target: "star"}) %>
            <% end %>
          <% end %>
        </div>
        <hr class="bg-primary-regular w-full h-0.5 mb-4"/>
        <h1 class="user-title mb-0"><%= @hotel.name.humanize %> Hotel</h1>
      </div>
    </div>

  </div>

</div>
