<div class="mx-4">
  <div class="container mx-auto">
    <div class="w-full flex justify-between items-center my-4">
      <h1 class="title mx-4"> Hotel Gallery</h1>
      <div class="self-end">
        <%= link_to "Add", new_admin_hotel_hotel_gallery_path(@hotel), class: "btn" %>
      </div>
    </div>
    <div class="flex flex-wrap items-center justify-center gap-5 ">
      <% @hotel_galleries.each do |hotel_gallery| %>
        <%= render "admin/hotel_galleries/gallery_card", hotel_gallery: hotel_gallery %>
      <% end %>
    </div>
</div>
</div>
