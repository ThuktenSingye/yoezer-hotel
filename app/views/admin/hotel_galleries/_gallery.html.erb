<turbo-frame id="<%= dom_id hotel_gallery %>">
  <div class="m-4" role="region" aria-labelledby="profile-<%= dom_id hotel_gallery %>">
    <div class="flex flex-col justify-center my-2">
      <% if hotel_gallery&.image.present? %>
        <%= image_tag hotel_gallery.image, class: "object-cover w-full mx-auto h-52 rounded" %>
      <% else %>
        <div class="bg-gray-200 w-full h-48 flex items-center justify-center">
          <%= image_tag "https://placehold.co/200x200", class: "object-cover w-full h-52 rounded" %>
        </div>
      <% end %>
      <div class="my-2 flex flex-col gap-2">
        <h2 class="title"><%= hotel_gallery.name %></h2>
        <p class="text-wrap text-text-color/50"><%= hotel_gallery.description %></p>
      </div>

      <hr class="bg-primary-regular h-0.5 my-2">
      <div class="flex justify-between items-center gap-2 my-2">
        <div>
          <%= link_to "Back", admin_hotel_hotel_galleries_path(@hotel), data: { turbo_frame: "_top"} ,class: "btn" %>
        </div>
        <div>
          <%= link_to "Edit", edit_admin_hotel_hotel_gallery_path(@hotel, hotel_gallery),class: "btn" %>
          <%= link_to 'Delete', admin_hotel_hotel_gallery_path(@hotel, hotel_gallery), data: { turbo_method: :delete, confirm: "Are you sure to delete?", turbo_frame: "_top" }, class: "btn" %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
