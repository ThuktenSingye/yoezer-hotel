<%= link_to admin_hotel_offer_path(@hotel, offer) do %>
  <div class="relative card-sm card-animation mt-2 p-3 flex flex-col gap-2">
    <div class="w-full">
      <% if offer&.image.present? %>
        <%= image_tag offer.image, class: "object-cover w-full h-48 rounded" %>
      <% else %>
        <div class="bg-gray-200 w-full h-48 flex items-center justify-center">
          <%= image_tag "https://placehold.co/200x200", class: "object-cover w-full h-48 rounded" %>
        </div>
      <% end %>
    </div>
    <div class="mb-2">
      <h3 class="title mb-2"><%= offer.title %></h3>
      <p class="text-sm text-text-color/50 line-clamp-1 text-ellipsis"><%= offer.description %></p>
    </div>
    <div class="absolute bg-primary-regular text-white p-3">
      <p><%= offer.discount %>% Off</p>
    </div>
    <hr class="bg-primary-regular h-0.5">
    <div class="flex flex-col items-start">
      <p class="flex mt-1">
        <span class="w-24">Start Date:</span>
        <span class="input-value"><%= offer.start_time.strftime("%b %d, %Y") %></span>
      </p>
      <p class="flex mt-1">
        <span class="w-24">End Date:</span>
        <span class="input-value"><%= offer.end_time.strftime("%b %d, %Y") %></span>
      </p>
    </div>
  </div>
<% end %>
