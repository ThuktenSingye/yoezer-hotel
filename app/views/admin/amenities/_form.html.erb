<div>
  <%= form_with(model: [ :admin, @hotel, amenity], local: true, class: "flex flex-col justify-center") do |f| %>
    <% if amenity.errors.any? %>
      <div id="error_explanation" class="flex flex-col items-center">
        <h2 class="text-text-color/50"><%= pluralize(amenity.errors.count, "error") %> prohibited this amenity from being added:</h2>
        <ul class="text-error">
          <% amenity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="my-2">
      <div class="my-2">
        <div class="flex flex-col" data-controller="avatar">
          <div class="relative flex flex-row justify-center shrink-0">
            <% if amenity.image.present? %>
              <%= image_tag amenity.image, class: "h-32 w-32 rounded-full p-2 border bg:white z-0", data: { avatar_target: "imagePreview" } %>
            <% else %>
              <%= image_tag "https://placehold.co/200x200", class: "h-32 w-32 rounded-full p-2 border bg:white z-0", data: { avatar_target: "imagePreview" } %>
            <% end %>
            <div class="self-start rounded-full border p-4 bg-background shadow-lg hover:bg-white hover:cursor-pointer" data-action="click->avatar#selectImage">
              <%= icon('fa-solid', 'pen-to-square', class: "text-primary-regular") %>
            </div>
            <%= f.file_field :image, accept: "image/*", data: {avatar_target: "avatarUpload", action: "change->avatar#showPreview"}, class: "hidden" %>
          </div>
        </div>
      </div>
      <div class="input-container">
        <%= f.label :name, class: "w-32 shrink-0 self-start pt-2" %>
        <%= f.text_field :name, class: "input-field " %>
      </div>
    </div>
    <hr class="h-0.5 bg-primary-regular"/>
    <div class="flex items-center mt-4 gap-5">
      <%= f.submit "Save", class: "btn" %>
      <%= link_to "Cancel", admin_hotel_amenities_path(@hotel), data: {"turbo-frame": "_top"}, class: "btn" %>
    </div>
  <% end %>
</div>

