<div class="w-full my-8">
  <div class="w-full md:w-5/6 mx-auto flex flex-col justify-center gap-10">

    <div class="w-full my-4">
      <h1 class="text-4xl font-title text-primary-regular text-center mb-8">FACILITIES</h1>
      <div class="flex flex-wrap justify-center md:justify-evenly lg:justify-center gap-12">
          <% @amenities.each do |amenity| %>
            <%= render 'home/amenity_card', amenity: amenity %>
          <% end %>
      </div>
    </div>

    <div class="w-full my-4">
      <h1 class="text-4xl font-title text-primary-regular text-center mb-8">ROOMS</h1>
      <div class="flex flex-wrap justify-center md:justify-evenly lg:justify-center gap-12">
        <% @room_categories.each do |room_category| %>
          <%= render 'home/room_category_card', room_category: room_category %>
        <% end %>
      </div>
    </div>

    <div class="w-full my-4">
      <h1 class="text-4xl font-title text-primary-regular text-center mb-8">OFFER</h1>
      <div class="px-6 lg:p-0">
        <% @offers.each do |offer| %>
          <%= render 'home/offer_card', offer: offer %>
        <% end %>
      </div>
    </div>

    <div class="w-full my-4">
      <div class="px-6 flex flex-col items-center justify-center gap-10">
        <p class="text-text-color/50 text-center text-balance">Enjoy the luxurious room with great experience and the hotel is all about
          including room booking and providing hotel information so customer can book.
          Enjoy the luxurious room with great experience and the hotel is all about
          including room booking and providing hotel information so customer can book.
        </p>

        <%= link_to "About Us", root_path, class: "btn" %>
      </div>
    </div>

  </div>
</div>
