<div class="relative h-[15rem] w-[90%] md:w-[250px]">
  <div class="absolute inset-0 w-full h-full">
    <%= image_tag(room_category.image&.attached? ? room_category.image : 'https://placehold.co/50x50', class: "object-cover rounded-md w-full h-full") %>
  </div>
  <div class="absolute rounded-sm z-10 inset-0 bg-primary-regular bg-opacity-50 hover:bg-opacity-0 transition duration-300"></div>

  <div class="absolute inset-0 rounded-sm flex flex-col items-center justify-center text-white gap-4 md:gap-10 px-4">
    <h1 class="text-2xl font-title z-50 font-medium"><%= room_category.name %></h1>
  </div>
</div>
